@page
@model IndexModel
@{
    ViewData["Title"] = "ScootRace";
}

<div class="container mt-4">
    <h1 class="display-4">ScootRace</h1>
    <p>Toto je úvodní stránka vaší aplikace pro závody koloběžek. Zde by měly být zobrazeny informace o závodech, závodnících, koloběžkách a sponzorech.</p>

    <!-- Test Oracle Connection Button -->
    <div class="text-center">
        <a class="btn btn-primary" href="/OracleTest/TestOracleConnection">Test Oracle Connection</a>
        <a class="btn btn-primary" href="/AddZavod">Přidat Závod</a>
        <a class="btn btn-primary" href="/AddZavodnik">Přidat Závodníka</a>
    </div>

    <!-- Display Oracle Connection Result -->
    <div class="mt-4">
        <h2>Oracle Connection Test Result</h2>
        @if (ViewBag.Message != null)
        {
            <p>Test Result: @ViewBag.Message</p>
        }
    </div>
</div>
